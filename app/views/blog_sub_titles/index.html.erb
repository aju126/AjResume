<p id="notice"><%= notice %></p>

<h1>Listing Blog Sub Titles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_sub_titles.each do |blog_sub_title| %>
      <tr>
        <td><%= link_to 'Show', blog_sub_title %></td>
        <td><%= link_to 'Edit', edit_blog_sub_title_path(blog_sub_title) %></td>
        <td><%= link_to 'Destroy', blog_sub_title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

